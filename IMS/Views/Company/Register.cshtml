@model IMS.Models.Entities.Company

@{
    ViewData["Title"] = "Company Register Page";
}
<html>
  <head>
    <link href="~/css/company-register.css" rel="stylesheet" />
  </head>
  <body class="company-register-page-wrapper">
    <div class="company-register-page-container">
    <div class="header-section">
      <img src="https://www.tuicms.edu.np/themes-assets/img/logo-round.jpg" />
      <h2>Company Register Form</h2>
    </div>
    <form action="register" method="POST">
    <div class="row-div1">
      <div class="input-field">
        <label for="name">Name </label>
        <input type="text" name="name" value="@Model?.Name" required />
          @Html.ValidationMessageFor(model => model.Name)
      </div>
      <div class="input-field">
        <label for="email">Email </label>
        <input type="email" name="email" value="@Model?.Email" required />
          @Html.ValidationMessageFor(model => model.Email)
      </div>
    </div>
    <div class="row-div1">
      <div class="input-field">
        <label for="address">Address </label>
        <input type="text" name="address" value="@Model?.Address"required />
          @Html.ValidationMessageFor(model => model.Address)
      </div>
      <div class="input-field">
        <label for="phone">Phone </label>
        <input type="number" name="phone" value="@Model?.Phone"required />
          @Html.ValidationMessageFor(model => model.Phone)
      </div>
    </div>
    <div class="row-div1">
      <div class="input-field">
        <label for="fax">Fax </label>
        <input type="text" name="fax" value="@Model?.Fax"required />
          @Html.ValidationMessageFor(model => model.Fax)
      </div>
      <div class="input-field">
        <label for="password">Password </label>
        <input type="password" name="password" value="@Model?.Password"required />
          @Html.ValidationMessageFor(model => model.Password)
      </div>
    </div>
      <div class="input-field">
        <label for="website">Website </label>
        <input type="text" name="website" value="@Model?.Website"required />
          @Html.ValidationMessageFor(model => model.Website)
      </div>
      <div class="button-field">
        <input type="submit" value="Register" />
      </div>
      <footer>
        <p>Already Have an account ?<span> <a href="login">Login</a></span></p>

      </footer>
    </form>
    </div>
    <!-- <p>Stored Value: @ViewBag.StoredValue</p> -->
  </body>
</html>
